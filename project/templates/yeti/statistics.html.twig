<table>
    <thead>
    <tr>
        <th>Year</th>
        <th>Month</th>
        <th>Day</th>
        <th>Average Rating</th>
    </tr>
    </thead>
    <tbody>
    {% for stat in statistics %}
        <tr>
            <td>{{ stat.year }}</td>
            <td>{{ stat.month }}</td>
            <td>{{ stat.day }}</td>
            <td>{{ stat.average|number_format(2) }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
