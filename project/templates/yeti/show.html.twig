{# templates/yeti/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Yeti{% endblock %}

{% block body %}
    <h1>Yeti</h1>



<!DOCTYPE html>
<html>
<head>
    <title>Yeti Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }
        .yeti-container {
            border: 1px solid #ddd;
            padding: 20px;
            margin: 20px auto;
            width: 80%;
            max-width: 600px;
            background-color: #f9f9f9;
        }
        img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
<h1>Yeti Details</h1>
{% if yeti %}
    <div class="yeti-container">
        <h2>{{ yeti.name }}</h2>
        {# <img src="{{ yeti.image }}" alt="{{ yeti.name }}"> #}
        {# <p><strong>Description:</strong> {{ yeti.description }}</p> #}
        <p><strong>Height:</strong> {{ yeti.height }} meters</p>
        <p><strong>Weight:</strong> {{ yeti.weight }} kg</p>
        <p><strong>Location:</strong> {{ yeti.location }}</p>
        <p><strong>Rating:</strong> {{ yeti.rating }}</p>
        <p><strong>Gender:</strong> {{ yeti.gender }}</p>
    </div>
    <div class="rating-form">
        <form action="{{ path('yeti_rate', { 'id': yeti.id }) }}" method="post">
            <div class="form-group" style="width: fit-content; margin: auto;">
                <label for="rating">Rate this Yeti:</label>
                <input type="number" id="rating" name="rating" class="form-control" min="1" max="5" step="1" required>
            </div>

            <button type="submit" class="btn btn-primary">Submit Rating</button>
            <a href="{{ path('yeti_random') }}" class="btn btn-primary">Get Another Random Yeti</a>
        </form>
    </div>
{% else %}
    <p>No Yeti found.</p>
{% endif %}
<div class="navigation mt-4">
    <a href="{{ path('app_home') }}">Back to list of TOP 10 Yetis</a>
    <span> | </span>
    <a href="{{ path('yeti_random') }}">Get Another Random Yeti</a>
    <span> | </span>
    <a href="{{ path('yeti_statistics') }}">View Rating Statistics</a>
</div>
<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
{% endblock %}