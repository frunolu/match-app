{# templates/yeti/random.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <title>Random Yeti</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            text-align: center;
            padding: 20px;
        }
        .yeti-container {
            border: 1px solid #ddd;
            padding: 20px;
            margin: 20px auto;
            width: 80%;
            max-width: 600px;
            background-color: #f9f9f9;
        }
        img {
            max-width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
<h1>Random Yeti</h1>
{% if yeti %}
    <div class="yeti-container">
        <h2>{{ yeti.name }}</h2>
{#        <img src="{{ yeti.image }}" alt="{{ yeti.name }}">#}
{#        <p><strong>Description:</strong> {{ yeti.description }}</p>#}
        <p><strong>Height:</strong> {{ yeti.height }} meters</p>
        <p><strong>Weight:</strong> {{ yeti.weight }} kg</p>
        <p><strong>Location:</strong> {{ yeti.location }}</p>
        <p><strong>Rating:</strong> {{ yeti.rating }}</p>
        <p><strong>Gender:</strong> {{ yeti.gender }}</p>
    </div>
{% else %}
    <p>No Yeti found.</p>
{% endif %}
<a href="{{ path('yeti_random') }}">Get Another Yeti</a>
</body>
</html>
