{% extends 'base.html.twig' %}

{% block title %}Yeti Statistics{% endblock %}

{% block body %}
    <h1>Yeti Statistics</h1>

    <table>
        <thead>
        <tr>
            {% if period == 'day' %}
                <th>Date</th>
            {% elseif period == 'month' %}
                <th>Year</th>
                <th>Month</th>
            {% elseif period == 'year' %}
                <th>Year</th>
            {% endif %}
            <th>Average Rating</th>
        </tr>
        </thead>
        <tbody>
        {% for stat in statistics %}
            <tr>
                {% if period == 'day' %}
                    <td>{{ stat.period }}</td>
                {% elseif period == 'month' %}
                    <td>{{ stat.period.year }}</td>
                    <td>{{ stat.period.month }}</td>
                {% elseif period == 'year' %}
                    <td>{{ stat.period }}</td>
                {% endif %}
                <td>{{ stat.average|number_format(2) }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <canvas id="ratingChart"></canvas>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('ratingChart').getContext('2d');
        const chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: {{ statistics|map(stat => period == 'day' ? stat.period : (period == 'month' ? stat.period.year ~ '-' ~ stat.period.month : stat.period))|json_encode|raw }},
                datasets: [{
                    label: 'Average Rating',
                    data: {{ statistics|map(stat => stat.average)|json_encode|raw }},
                    borderColor: 'rgba(75, 192, 192, 1)',
                    fill: false
                }]
            }
        });
    </script>
{% endblock %}
